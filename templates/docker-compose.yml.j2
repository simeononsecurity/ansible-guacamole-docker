services:
  postgres:
    image: postgres:17
    container_name: guacamole-postgres
    restart: unless-stopped
    environment:
      POSTGRES_DB: guacamole_db
      POSTGRES_USER: guacamole_user
      POSTGRES_PASSWORD: {{ postgres_password }}
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./init:/docker-entrypoint-initdb.d:ro
    networks:
      - guacamole-net
    ports:
      - "5432:5432"

  guacd:
    image: guacamole/guacd:latest
    container_name: guacamole-guacd
    restart: unless-stopped
    networks:
      - guacamole-net
    environment:
      - LOG_LEVEL=info
    volumes:
      - guacd_data:/var/lib/guacamole

  guacamole:
    image: guacamole/guacamole:latest
    container_name: guacamole-web
    restart: unless-stopped
    ports:
      - "{{ guacamole_port }}:8080"
    networks:
      - guacamole-net
{% if traefik_enabled | default(false) %}
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.guacamole.rule=Host(`{{ traefik_host }}`)"
      - "traefik.http.routers.guacamole.entrypoints={{ traefik_entrypoint | default('websecure') }}"
      - "traefik.http.routers.guacamole.tls.certresolver={{ traefik_cert_resolver | default('letsencrypt') }}"
      - "traefik.http.services.guacamole.loadbalancer.server.port=8080"
{% endif %}
    environment:
      # PostgreSQL Database Configuration
      - POSTGRESQL_ENABLED=true
      - POSTGRESQL_DATABASE=guacamole_db
      - POSTGRESQL_USERNAME=guacamole_user
      - POSTGRESQL_PASSWORD={{ postgres_password }}
      - POSTGRESQL_HOSTNAME=postgres
      - POSTGRESQL_PORT=5432
      
      # Guacd Connection Configuration
      - GUACD_HOSTNAME=guacd
      - GUACD_PORT=4822
      
      # Security Settings
      - BAN_ENABLED=true
      - BAN_MAX_INVALID_ATTEMPTS=5
      - BAN_ADDRESS_DURATION=300
      
      # Optional: Additional security settings
      - POSTGRESQL_DEFAULT_STATEMENT_TIMEOUT=0
      - POSTGRESQL_SOCKET_TIMEOUT=0
      - POSTGRESQL_AUTO_CREATE_ACCOUNTS=false
    depends_on:
      - postgres
      - guacd
    volumes:
      - guacamole_data:/etc/guacamole

volumes:
  postgres_data:
    driver: local
  guacd_data:
    driver: local
  guacamole_data:
    driver: local

networks:
  guacamole-net:
    driver: bridge
